    <state>
        <name>ok_state</name>
        <response>
            <name>Motor stop</name>
            <type>motor_move</type>
            <value>stop</value>
        </response>
        <response>
            <name>Ok voice</name>
            <type>voice_response</type>
            <value>okay</value>
        </response>
        <response>
            <name>Going back to Root State</name>
            <type>go_to_state</type>
            <value>root_state</value>
        </response>
    </state>

    <state>
        <name>follow_me_state</name>
        <response>
            <name>follow voice</name>
            <type>voice_response</type>
            <value>on your command</value>
        </response>
        <response>
            <name>Following LED</name>
            <type>led</type>
            <value>following</value>
        </response>
        <response>
            <name>Motor forward</name>
            <type>motor_move</type>
            <value>forward</value>
        </response>
        <stateaction>
            <action>
                <type>voice_command</type>
                <value>never mind</value>
            </action>
            <to>root_state</to>
        </stateaction>
        <stateaction>
            <action>
                <type>voice_command</type>
                <value>NEVER MIND</value>
            </action>
            <to>root_state</to>
        </stateaction>
        <stateaction>
            <action>
                <type>voice_command</type>
                <value>CANCEL</value>
            </action>
            <to>ok_state</to>
        </stateaction>
        <stateaction>
            <action>
                <type>voice_command</type>
                <value>STOP</value>
            </action>
            <to>ok_state</to>
        </stateaction>
        <stateaction>
            <action>
                <type>voice_command</type>
                <value>STOP FOLLOWING</value>
            </action>
            <to>ok_state</to>
        </stateaction>
        <stateaction>
            <action>
                <type>voice_command</type>
                <value>STOP FOLLOWING ME</value>
            </action>
            <to>ok_state</to>
        </stateaction>
        <stateaction>
            <action>
                <type>voice_command</type>
                <value>SHUTDOWN</value>
            </action>
            <to>ok_state</to>
        </stateaction>
    </state>
</graph>
